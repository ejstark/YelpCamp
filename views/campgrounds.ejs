<%- include ('partials/header') %>


<div class="container">
    <header class="jumbotron">
        <div class="jumbotron">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked camppgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a></p>
        </div>
    </header>


    <div class="row">

        <div class="col-md-4 col-sm-6 ">
            <% campgrounds.forEach(campground => { %>
            <div class="">
                <img class="img-fluid" src="<%= campground.image %> " alt="">
                <div class="caption">
                    <h4><%= campground.name %> </h4>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

