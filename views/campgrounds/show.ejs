<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1 </li>
                <li class="list-group-item">Info 1 </li>
                <li class="list-group-item">Info 1 </li>

            </div>
            <!-- map -->
        </div>
        <div class="col-md-9">
            <figure class="rounded p-3 bg-light shadow-sm">
                <img class="img-fluid" src="<%= campground.image %> " alt="<%= campground.name %>'s image">
                <figcaption class="p-1 card-img-bottom">
                    <h4 class="float-right">$8.00/night</h4>
                    <h4><a href=""><%= campground.name %> </a></h4>
                    <p> <%= campground.description %> </p>
                </figcaption>
            </figure>
            <div class="card p-4">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new ">Add New
                        Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach((comment)=>{ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right"> 10 days ago</span>
                            <p>
                                <%= comment.text %>
                           </p>
                        </div>
                    </div>

                <% }) %>
            </div>
        </div>
    </div>
</div>






<%- include ('../partials/footer') %>